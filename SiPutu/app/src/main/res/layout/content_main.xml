<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:context=".MainActivity"
        android:orientation="vertical"
    tools:showIn="@layout/app_bar_main">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp">
            <android.support.v7.widget.CardView

                android:layout_margin="12dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="8dp"
                app:cardElevation="8dp">
                <!-- ini membuat dashboar dengan relative layout -->
                <RelativeLayout
                    android:layout_margin="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/txtDashboard"
                        android:textSize="40dp"
                        android:text="Si Putu"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="90dp"
                        android:layout_alignParentRight="true"
                        android:src="@drawable/p1"/>

                    <TextView
                        android:layout_marginTop="6dp"
                        android:layout_below="@+id/txtDashboard"
                        android:textSize="12sp"
                        android:text="Sistem Pakar Tembakau"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />


                </RelativeLayout>

            </android.support.v7.widget.CardView>
        </LinearLayout>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:alignmentMode="alignMargins"
                    android:columnOrderPreserved="false"
                    android:columnCount="2"
                    android:rowCount="3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <android.support.v7.widget.CardView
                        android:id="@+id/btnkhimar"

                        android:layout_margin="12dp"
                        android:layout_rowWeight="1"
                        android:layout_columnWeight="1"
                        android:layout_width="0px"
                        android:layout_weight="2"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="8dp"
                        app:cardElevation="8dp">

                        <LinearLayout
                            android:padding="12dp"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="150dp">

                            <ImageView

                                android:id="@+id/koko"
                                android:src="@drawable/d2"
                                android:layout_width="100dp"
                                android:layout_height="0dp"
                                android:layout_weight="3"/>

                            <TextView

                                android:textSize="15sp"
                                android:text="Diagnosa"
                                android:layout_width="wrap_content"
                                android:layout_height="0dp"
                                android:layout_weight="1"/>


                        </LinearLayout>
                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:id="@+id/bajukoko"
                        android:layout_margin="12dp"
                        android:layout_rowWeight="1"
                        android:layout_columnWeight="1"
                        android:layout_width="0px"
                        android:layout_weight="2"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="8dp"
                        app:cardElevation="8dp">

                        <LinearLayout
                            android:padding="12dp"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="150dp">

                            <ImageView
                                android:id="@+id/pria"
                                android:src="@drawable/d1"
                                android:layout_width="100dp"
                                android:layout_height="0dp"
                                android:layout_weight="3"/>

                            <TextView
                                android:textSize="15sp"
                                android:text="Cara Mutu Budidaya"
                                android:layout_width="wrap_content"
                                android:layout_height="0dp"
                                android:layout_weight="1"/>


                        </LinearLayout>
                    </android.support.v7.widget.CardView>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <android.support.v7.widget.CardView
                        android:id="@+id/gamiswanita"
                        android:layout_margin="12dp"
                        android:layout_rowWeight="1"
                        android:layout_columnWeight="1"
                        android:layout_width="0px"
                        android:layout_weight="2"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="8dp"
                        app:cardElevation="8dp">

                        <LinearLayout
                            android:padding="12dp"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="150dp">

                            <ImageView
                                android:id="@+id/gamisp"
                                android:src="@drawable/d3"
                                android:layout_width="100dp"
                                android:layout_height="0dp"
                                android:layout_weight="3"/>

                            <TextView
                                android:textSize="12dp"
                                android:text="Data Hama,Penyakit"
                                android:layout_width="wrap_content"
                                android:layout_height="0dp"
                                android:layout_weight="1"/>



                        </LinearLayout>
                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:id="@+id/a2"
                        android:layout_margin="12dp"
                        android:layout_rowWeight="1"
                        android:layout_columnWeight="1"
                        android:layout_width="0px"
                        android:layout_weight="2"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="8dp"
                        app:cardElevation="8dp">

                        <LinearLayout
                            android:padding="12dp"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="150dp">

                            <ImageView
                                android:id="@+id/accsoris"
                                android:src="@drawable/d4"
                                android:layout_width="100dp"
                                android:layout_height="0dp"
                                android:layout_weight="3"/>

                            <TextView
                                android:textSize="12dp"
                                android:text="Tentang Aplikasi"
                                android:layout_width="wrap_content"
                                android:layout_height="0dp"
                                android:layout_weight="1"/>

                        </LinearLayout>
                    </android.support.v7.widget.CardView>

                </LinearLayout>

            </LinearLayout>
        </ScrollView>


    </LinearLayout>